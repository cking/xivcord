.channels-Ie2l6A {
  clickThrough(before)
  padding-left: 10px

  &:before {
    vertical-line(left, false)
  }

  > [class*='flex'] {
    [class*='flexChild'] {
      margin-left: -8px
    }
  }

  .containerDefault-3GGEv_ {
    > [class*='flex'] {
      padding-left: 5px

      svg {
        display: none
      }

      div[class*='flex'] {
        position: relative

        div[class=''] {
          position: absolute
          top: 0
          right: 1.5rem
          height: 18px
          filter: hue-rotate(-30deg)
          color: #75d2e6
          with: 18px

          &:hover {
            filter: hue-rotate(-30deg) brightness(1.2)
          }

          &:after {
            position: absolute
            top: 0
            right: 0
            z-index: -1
            display: inline-block
            content: '\f216'
            text-transform: none
            font-weight: normal
            font-style: normal
            font-variant: normal
            font-family: 'Ionicons'
            line-height: 1
            transition: transform .5s ease
            speak: none
            text-rendering: auto
            -webkit-font-smoothing: antialiased
          }
        }

        svg {
          display: block
          opacity: 0
        }
      }

      [class*='nameDefault'],
      [class*='nameHovered'],
      [class*='nameCollapsed'] {
        position: relative
        color: #75d2e6
        text-transform: inherit
        letter-spacing: -1px
        font-variant: small-caps
        font-size: 1rem
        transition: color .5s

        &:after {
          position: absolute
          right: 5px
          display: inline-block
          content: '\f35e'
          text-transform: none
          font-weight: normal
          font-style: normal
          font-variant: normal
          font-family: 'Ionicons'
          line-height: 1
          transition: transform .5s ease
          speak: none
          text-rendering: auto
          -webkit-font-smoothing: antialiased
        }
      }

      [class*='nameHovered'] {
        color: lighten(#75d2e6, 10)
      }

      [class*='nameCollapsed']:after,
      [class*='nameHoveredCollapsed']:after {
        transform: rotate(90deg)
      }
    }
  }

  .containerDefault-1ZnADq {
    svg {
      display: none
    }

    [class*='wrapper'] [class*='unread'] {
      display: none
    }

    [class*='nameDefaultText'],
    [class*='nameDefaultVoice'] {
      color: #eee1c5
    }

    [class*='nameUnreadText'] {
      color: #b87aff
    }

    [class*='nameUnreadText']:before {
      filter: hue-rotate(200deg)
    }

    [class*='nameMutedText'],
    [class*='nameLockedVoice'] {
      color: darken(#eee1c5, 50)
    }

    [class*='nameSelectedText'],
    [class*='nameHoveredText'],
    [class*='nameSelectedVoice'],
    [class*='nameHoveredVoice'] {
      color: lighten(#eee1c5, 10)
    }

    [class*='nameSelectedText']:before,
    [class*='nameHoveredText']:before,
    [class*='nameMutedText']:before,
    [class*='nameDefaultText']:before,
    [class*='nameUnreadText']:before,
    [class*='nameLockedVoice']:before,
    [class*='nameDefaultVoice']:before,
    [class*='nameSelectedVoice']:before,
    [class*='nameHoveredVoice']:before,
    [class*='nameLockedVoice']:before {
      position: relative
      top: .1rem
      display: inline-block
      margin-right: .2rem
      width: 1rem
      height: 1rem
      background-image: url('img/pet.png')
      background-size: cover
      content: ''
    }

    [class*='nameLockedVoice']:before,
    [class*='nameMutedText']:before {
      filter: brightness(40%)
    }

    [class*='content'] {
      clickThrough(before)
      clickThrough(after)
      overflow: visible
      margin: 5px 0 5px .5rem
      height: 1.5rem
      background: transparent !important

      &:before {
        border-radius: 0
        border-top-left-radius: .75rem
        border-bottom-left-radius: .75rem
      }

      &:after {
        top: -10px
        bottom: -10px
        background: linear-gradient(to right, transparent, #313031) !important
      }

      > div {
        z-index: 1
      }
    }

    [class*='contentSelectedText']:before {
      background: #eee1c544
      box-shadow: 0 0 5px #eee1c544
    }

    [class*='contentSelectedVoice']:before {
      background: #b87aff44
      box-shadow: 0 0 5px #b87aff44
    }

    [class*='contentHoveredText']:before,
    [class*='contentHoveredVoice']:before {
      background: alpha(darken(#eee1c5, 50), .3)
      box-shadow: 0 0 5px alpha(darken(#eee1c5, 50), .3)
    }

    [class*='nameDefaultVoice']:before,
    [class*='nameSelectedVoice']:before,
    [class*='nameHoveredVoice']:before,
    [class*='nameLockedVoice']:before {
      background-image: url('img/chocobo.png')
    }
  }

  [class*='scrollerWrap'] {
    clickThrough(after)
    clickThrough(before)

    &:after {
      background: linear-gradient(to bottom, #313031 0, transparent 1%, transparent 99%, #313031 100%)
    }

    &:before {
      left: initial
      width: 3px
      background: radial-gradient(#0004, transparent 66%)
    }
  }

  .container-2Thooq {
    @import 'userpanel'
  }

  .container-1UB9sr {
    @import 'voicepanel'
  }
}

.private-channels {
  .scroller-2FKFPG {
    > :first-child, > :last-child {
      margin-top: -20px
    }

    header {
      margin: 10px 20px 10px 0
      padding: 0
      border: 1px solid rgba(255, 255, 255, .3)
      border-radius: 50%
      font-size: 0
    }
  }

  .channel {
    clickThrough(before)
    clickThrough(after)
    overflow: visible
    overflow: visible
    margin: 10px 0 10px 5px
    height: 1.5rem
    border-radius: 0
    border-top-left-radius: .75rem
    border-bottom-left-radius: .75rem
    color: #eee1c5

    &.btn-friends {
      height: 42px

      a {
        position: relative
        padding-left: 42px

        svg {
          display: none
        }

        &:before {
          item-button(ItemRelic)
          position: absolute
          top: 1px
          left: -10px
          width: 42px
          height: 42px
          content: ''
        }

        &:after {
          gold-tint()
          position: absolute
          top: 2px
          left: -4px
          width: 42px
          height: 42px
          content: ''
          font-size: 2rem
          font-family: RPGAwesome
          line-height: 2.25rem
        }
      }
    }

    &:before {
      z-index: -1
      border-radius: 0
    }

    &:after {
      top: -10px
      bottom: -10px
      z-index: -1
      background: linear-gradient(to right, transparent, #313031) !important
    }

    &.selected:before {
      background: #eee1c544 !important
      box-shadow: 0 0 5px #eee1c544
    }

    &:hover:before {
      background: alpha(darken(#eee1c5, 50), .3) !important
      box-shadow: 0 0 5px alpha(darken(#eee1c5, 50), .3)
    }

    > a {
      z-index: 1
      // padding: 0
      background: none !important
    }

    .close {
      display: block
      margin-right: .5rem
      background: none
      color: rgba(255, 255, 255, .5)
      font-size: 1.5rem
      line-height: 1rem

      &:hover {
        color: rgba(255, 255, 255, .8)
      }

      &:after {
        content: '×'
      }
    }
  }

  .avatar-small {
    item-button(ItemRelic)
    top: 1px
    margin-left: -10px
    background-size: cover

    .status {
      top: 0
      right: 0
      bottom: initial
      border: 1px solid black

      // TODO: typing notification
    }
  }
}
