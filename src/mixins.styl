clickThrough(pseudo = after) {
  position: relative;

  &:{pseudo} {
    position: absolute;
    bottom: 0;
    right: 0;
    top: 0;
    left: 0;
    content: "";
    pointer-events: none;
  }
}

window() {
  clickThrough()

  border-radius: 10px;
  background: linear-gradient(to bottom, #76726e, #313031 30px) repeat-x;
  box-shadow:
    0 0 2px 6px rgba(255, 255, 255, 0.4) inset,
    1px 1px 3px 2px rgba(0, 0, 0, 0.4);
  padding: 1rem;

  &:after {
    border-style: solid;
    border-width: 11px;
    border-image: url('border.png') 11;
    border-image-outset: 2px;
  }
}

window-title(fixMargin = false) {
  clickThrough()

  color: #d2d2d2;
  font-weight: 700;
  padding: 5px 10px;
  text-shadow: 2px 2px 2px black;
  letter-spacing: -1px;

  if fixMargin {
    margin: -0.8rem -0.8rem 1rem;
  }

  &:after {
    left: 5px !important;
    right: 5px !important;
    top: initial !important
    height: 0px !important
    border-radius: 2px;
    border: 1px inset rgba(255, 255, 255, 0.2);
  }
}

red-button() {
  clickThrough()

  width: 3rem;
  height: 3rem;
  padding: 0.5rem;
  background: linear-gradient(to bottom, rgba(255, 255, 255, 0.6), rgba(0, 0, 0, 0) 20%), radial-gradient(circle, #4a1818, #ae3e3e);
  border-radius: 0.5rem;
  box-shadow:
    0 1px 1px -1px white inset,
    0 -1px 1px -1px rgba(255, 255, 255, 0.4) inset,
    0 2px 2px 1px rgba(0, 0, 0, 0.4);
  border: 1px solid #2d2d2d;
  margin: 0.2rem;

  &:after {
    border-radius: 0.5rem;
  }

  &:hover {
    cursor: pointer;
  }

  &:hover:after {
    background: rgba(255, 255, 255, 0.1);
  }

  &.active:after, &.selected:after {
    border: 3px solid #fff8cb;
    box-shadow:
      0 0 2px #fff8cb inset,
      0 0 2px #fff8cb;
    top: -2px;
    left: -2px;
    bottom: -2px;
    right: -2px;
  }
}

gold-tint() {
  filter: drop-shadow(1px 1px 5px rgba(0, 0, 0, 0.4)) drop-shadow(-1px -1px 5px rgba(0, 0, 0, 0.4)) drop-shadow(-1px 1px 5px rgba(0, 0, 0, 0.4)) drop-shadow(1px -1px 5px rgba(0, 0, 0, 0.4));
  background: linear-gradient(45deg, #ffee7b, #947b4a, #ffee7b);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  color: #f6bd6a;
}

vertical-line(side = left) {
  box-shadow: 0 0 2px #2f2623
  {side}: 0;
  if side == left {
    right: initial;
  } else {
    left: initial
  }
  width: 2px
  background: #9a7948
  border-right: 1px solid #654e2c;
  border-radius: 1px;
}

horizontal-line(side = top) {
  box-shadow: 0 0 2px #2f2623
  {side}: 0;
  if side == top {
    bottom: initial;
  } else {
    top: initial
  }
  height: 2px
  background: #9a7948
  border-bottom: 1px solid #654e2c;
  border-radius: 1px;
}

